datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


model User {
  id                 String              @id @default(uuid())
  email              String              @unique
  passwordHash       String
  createdAt          DateTime            @default(now())
  stripeCustomerId   String?
  subscriptionEndsAt DateTime?
  subscriptionStatus SubscriptionStatus?
  updatedAt          DateTime            @updatedAt
  ImportLimit        ImportLimit?
  Recipes            Recipe[]
}

model Recipe {
  id          String             @id @default(uuid()) @db.Uuid
  userId      String             @db.Uuid
  title       String
  servings    Int                @default(1)
  steps       Json?
  imageUrl    String?
  notes       String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  user        User               @relation(fields: [userId], references: [id])
  ingredients Ingredient[]
  @@index([userId])
}

model Ingredient {
  id           String  @id @default(uuid()) @db.Uuid
  recipeId     String  @db.Uuid
  name         String
  quantity     Float   @default(0)
  unit         String  // "g" | "ml" | "piece" (stocké en string)
  airtableId   String? // ⚠️ Airtable renvoie "recXXXX...", surtout PAS @db.Uuid
  unitPriceBuy Float? // prix d'achat à l'unité (ppu)
  costRecipe   Float? // coût recette (quantity * ppu normalisé)
  recipe       Recipe  @relation(fields: [recipeId], references: [id])
  @@index([recipeId])
  @@map("Ingredients") // ← mappe le modèle Prisma sur la table "Ingredients"

}

model ImportLimit {
  id          String   @id @default(uuid())
  userId      String   @unique
  breakfasts  Int      @default(0)
  lunches     Int      @default(0)
  snacks      Int      @default(0)
  dinners     Int      @default(0)
  periodStart DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

enum SubscriptionStatus {
  trialing
  active
  past_due
  canceled
}
